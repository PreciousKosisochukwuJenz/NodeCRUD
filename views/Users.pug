extends layout 
block content 
    .card 
        .card-header 
            h1.text-uppercase #{title}
            a.btn.btn-success.pull-right(href="/users/add") Add User
        .card-body 
            table.table.table-bordered
                thead 
                    tr
                        th Name 
                        th Email 
                        th Username 
                        th Actions 
                tbody 
                    if(users != null)
                        each user,i in users
                            tr 
                                td=user.name
                                td=user.email 
                                td=user.username 
                                td
                                    a.btn.btn-primary.mr-2(href="/users/edit/"+ user._id) 
                                        span
                                         | Edit
                                    button.btn.btn-danger.DeleteBtn(data-id=user._id) 
                                        span(data-id=user._id)
                                         | Delete
                    else 
                        tr 
                            td.text-center(colspan="4") No record found
